<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="sys21_campos_zukarmex.Controls.CustomFlyoutHeader">
    
    <Grid BackgroundColor="{DynamicResource Primary}" 
          HeightRequest="200">
        
        <!-- Background gradient effect -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{DynamicResource Primary}" Offset="0.0" />
                <GradientStop Color="{DynamicResource PrimaryDark}" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>
        
        <!-- Content -->
        <StackLayout Orientation="Vertical" 
                     VerticalOptions="Center" 
                     HorizontalOptions="Center"
                     Padding="20">
            
            <!-- App Logo/Icon -->
            <Ellipse Fill="White" 
                     WidthRequest="60" 
                     HeightRequest="60"
                     Margin="0,0,0,15" />
            
            <!-- App Title -->
            <Label Text="Sistema Campos" 
                   FontSize="20" 
                   FontAttributes="Bold" 
                   TextColor="White" 
                   HorizontalOptions="Center" />
            
            <!-- Subtitle -->
            <Label Text="Zukarmex" 
                   FontSize="14" 
                   TextColor="White" 
                   Opacity="0.8"
                   HorizontalOptions="Center" 
                   Margin="0,5,0,0" />
            
            <!-- User info (optional) -->
            <Label x:Name="UserLabel"
                   Text="Usuario Conectado" 
                   FontSize="12" 
                   TextColor="White" 
                   Opacity="0.7"
                   HorizontalOptions="Center" 
                   Margin="0,10,0,0" />
                   
        </StackLayout>
        
    </Grid>
    
</ContentView>
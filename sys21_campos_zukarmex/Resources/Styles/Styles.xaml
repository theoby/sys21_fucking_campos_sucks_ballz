<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Base Styles -->
    <Style TargetType="ContentPage" ApplyToDerivedTypes="True">
        <Setter Property="BackgroundColor" Value="{DynamicResource PageBackgroundColor}" />
    </Style>

    <Style TargetType="NavigationPage">
        <Setter Property="BackgroundColor" Value="{DynamicResource Primary}" />
        <Setter Property="BarBackgroundColor" Value="{DynamicResource Primary}" />
        <Setter Property="BarTextColor" Value="{DynamicResource TextOnPrimary}" />
    </Style>

    <Style TargetType="TabbedPage">
        <Setter Property="BarBackgroundColor" Value="{DynamicResource Primary}" />
        <Setter Property="BarTextColor" Value="{DynamicResource TextOnPrimary}" />
        <Setter Property="SelectedTabColor" Value="{DynamicResource Secondary}" />
        <Setter Property="UnselectedTabColor" Value="{DynamicResource Gray400}" />
    </Style>

    <!-- Label Styles -->
    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource TextPrimary}" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
    </Style>

    <Style x:Key="LabelHeadline" TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource TextPrimary}" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="LabelTitle" TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource TextPrimary}" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="LabelSubtitle" TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource TextSecondary}" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style x:Key="LabelBody" TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource TextPrimary}" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style x:Key="LabelCaption" TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource TextSecondary}" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <!-- Button Styles -->
    <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="{DynamicResource Primary}" />
        <Setter Property="TextColor" Value="{DynamicResource TextOnPrimary}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="MinimumHeightRequest" Value="44" />
    </Style>

    <Style x:Key="ButtonSecondary" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{DynamicResource Secondary}" />
        <Setter Property="TextColor" Value="{DynamicResource TextOnSecondary}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="MinimumHeightRequest" Value="44" />
    </Style>

    <Style x:Key="ButtonOutline" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{DynamicResource Primary}" />
        <Setter Property="BorderColor" Value="{DynamicResource Primary}" />
        <Setter Property="BorderWidth" Value="2" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="MinimumHeightRequest" Value="44" />
    </Style>

    <Style x:Key="ButtonText" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{DynamicResource Primary}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="MinimumHeightRequest" Value="44" />
    </Style>

    <Style x:Key="ButtonSuccess" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{DynamicResource Success}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="MinimumHeightRequest" Value="44" />
    </Style>

    <Style x:Key="ButtonWarning" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{DynamicResource Warning}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="MinimumHeightRequest" Value="44" />
    </Style>

    <Style x:Key="ButtonError" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{DynamicResource Error}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="MinimumHeightRequest" Value="44" />
    </Style>

    <!-- Entry Styles -->
    <Style TargetType="Entry">
        <Setter Property="TextColor" Value="{DynamicResource TextPrimary}" />
        <Setter Property="BackgroundColor" Value="{DynamicResource SurfaceColor}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="MinimumHeightRequest" Value="44" />
    </Style>

    <!-- Picker Styles -->
    <Style TargetType="Picker">
        <Setter Property="TextColor" Value="{DynamicResource TextPrimary}" />
        <Setter Property="BackgroundColor" Value="{DynamicResource SurfaceColor}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="MinimumHeightRequest" Value="44" />
    </Style>

    <!-- DatePicker Styles -->
    <Style TargetType="DatePicker">
        <Setter Property="TextColor" Value="{DynamicResource TextPrimary}" />
        <Setter Property="BackgroundColor" Value="{DynamicResource SurfaceColor}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="MinimumHeightRequest" Value="44" />
    </Style>

    <!-- Frame Styles -->
    <Style TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{DynamicResource CardBackgroundColor}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="HasShadow" Value="True" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="BorderColor" Value="Transparent" />
    </Style>

    <Style x:Key="CardFrame" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{DynamicResource CardBackgroundColor}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="HasShadow" Value="True" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="BorderColor" Value="Transparent" />
        <Setter Property="Margin" Value="10,5" />
    </Style>

    <Style x:Key="InputFrame" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{DynamicResource Gray100}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="BorderColor" Value="Transparent" />
    </Style>

    <!-- ActivityIndicator Styles -->
    <Style TargetType="ActivityIndicator">
        <Setter Property="Color" Value="{DynamicResource Primary}" />
    </Style>

    <!-- ProgressBar Styles -->
    <Style TargetType="ProgressBar">
        <Setter Property="ProgressColor" Value="{DynamicResource Primary}" />
        <Setter Property="BackgroundColor" Value="{DynamicResource Gray200}" />
    </Style>

    <!-- RefreshView Styles -->
    <Style TargetType="RefreshView">
        <Setter Property="RefreshColor" Value="{DynamicResource Primary}" />
    </Style>

    <!-- Switch Styles -->
    <Style TargetType="Switch">
        <Setter Property="OnColor" Value="{DynamicResource Primary}" />
        <Setter Property="ThumbColor" Value="{DynamicResource White}" />
    </Style>

    <!-- CheckBox Styles -->
    <Style TargetType="CheckBox">
        <Setter Property="Color" Value="{DynamicResource Primary}" />
    </Style>

    <!-- Slider Styles -->
    <Style TargetType="Slider">
        <Setter Property="MinimumTrackColor" Value="{DynamicResource Primary}" />
        <Setter Property="MaximumTrackColor" Value="{DynamicResource Gray300}" />
        <Setter Property="ThumbColor" Value="{DynamicResource Primary}" />
    </Style>

    <!-- Stepper Styles -->
    <Style TargetType="Stepper">
        <Setter Property="BackgroundColor" Value="{DynamicResource Primary}" />
    </Style>

    <!-- SearchBar Styles -->
    <Style TargetType="SearchBar">
        <Setter Property="TextColor" Value="{DynamicResource TextPrimary}" />
        <Setter Property="PlaceholderColor" Value="{DynamicResource TextHint}" />
        <Setter Property="BackgroundColor" Value="{DynamicResource SurfaceColor}" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <!-- Shell Styles -->
    <Style TargetType="Shell" ApplyToDerivedTypes="True">
        <Setter Property="Shell.BackgroundColor" Value="{DynamicResource Primary}" />
        <Setter Property="Shell.ForegroundColor" Value="{OnPlatform WinUI={DynamicResource Primary}, Default={DynamicResource White}}" />
        <Setter Property="Shell.TitleColor" Value="{DynamicResource White}" />
        <Setter Property="Shell.DisabledColor" Value="{DynamicResource Gray600}" />
        <Setter Property="Shell.UnselectedColor" Value="{DynamicResource Gray400}" />
        <Setter Property="Shell.TabBarBackgroundColor" Value="{DynamicResource White}" />
        <Setter Property="Shell.TabBarForegroundColor" Value="{DynamicResource Primary}" />
        <Setter Property="Shell.TabBarUnselectedColor" Value="{DynamicResource Gray400}" />
        <Setter Property="Shell.TabBarTitleColor" Value="{DynamicResource Primary}" />
    </Style>

</ResourceDictionary>


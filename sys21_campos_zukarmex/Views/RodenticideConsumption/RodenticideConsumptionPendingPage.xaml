<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="sys21_campos_zukarmex.Views.RodenticideConsumption.RodenticideConsumptionPendingPage"
             xmlns:viewmodels="clr-namespace:sys21_campos_zukarmex.ViewModels"
             xmlns:models="clr-namespace:sys21_campos_zukarmex.Models"
             x:DataType="viewmodels:RodenticideConsumptionPendingViewModel"
             Title="Consumos Pendientes">

    <Grid RowDefinitions="Auto,*">
        <Frame Grid.Row="0"
               Padding="20"
               Margin="10"
               CornerRadius="15"
               HasShadow="True">
            <StackLayout Spacing="15">
                <Label Text="Consumos Pendientes de EnvÃ­o"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="{DynamicResource Primary}"
                       HorizontalOptions="Center" />
                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="Center"
                             Spacing="10">
                    <Label Text="Total Pendientes:"
                           FontSize="18"
                           TextColor="{DynamicResource Gray700}"
                           VerticalOptions="Center" />
                    <Label Text="{Binding PendingCount}"
                           FontSize="30"
                           FontAttributes="Bold"
                           TextColor="{DynamicResource Orange}"
                           VerticalOptions="Center" />
                </StackLayout>
                <Button Text="Enviar Todos Ahora"
                        Command="{Binding SendAllPendingCommand}"
                        BackgroundColor="{DynamicResource Success}"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="50"
                        FontSize="16" />
            </StackLayout>
        </Frame>
        <RefreshView Grid.Row="1"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding PendingConsumptions}"
                            Margin="10,0">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:SalidaRodenticida">
                        <Frame Padding="15"
                               Margin="0,5"
                               CornerRadius="10">
                            <Grid ColumnDefinitions="*, Auto"
                                  RowDefinitions="Auto, Auto, Auto, Auto,Auto"
                                  RowSpacing="12">

                                <StackLayout>
                                    <Label Text="{Binding Fecha, StringFormat='{0:dd/MM/yyyy HH:mm}'}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="{DynamicResource Gray600}" />
                                    <Grid Grid.Row="2"
                                          Grid.ColumnSpan="2"
                                          ColumnDefinitions="*,*"
                                          RowSpacing="5">

                                        <StackLayout Grid.Column="0"
                                                     Spacing="2">
                                            <Label Text="{Binding IdTemporada, StringFormat='Zafra: {0}'}"
                                                   FontSize="12"
                                                   TextColor="{DynamicResource Gray900}" />
                                        </StackLayout>

                                        <StackLayout Grid.Column="1"
                                                     Spacing="2">
                                            <Label Text="{Binding IdCampo, StringFormat='Predio: {0}'}"
                                                   FontSize="12"
                                                   TextColor="{DynamicResource Gray900}" />

                                        </StackLayout>


                                    </Grid>
                                </StackLayout>

                                <BoxView Grid.Row="1"
                                         Grid.ColumnSpan="2"
                                         HeightRequest="1"
                                         Color="LightGray" />

                                <Grid Grid.Row="2"
                                      Grid.ColumnSpan="2"
                                      ColumnDefinitions="*,*"
                                      RowSpacing="5">



                                    <StackLayout Grid.Column="0"
                                                 Spacing="2">
                                        <Label Text="{Binding CantidadComederos, StringFormat='Comederos: {0}'}"
                                               FontSize="12"
                                               TextColor="{DynamicResource Gray900}" />

                                        <Label Text="{Binding CantidadPastillas, StringFormat='Pastillas: {0}'}"
                                               FontSize="12"
                                               TextColor="{DynamicResource Gray900}" />
                                        <Label Text="{Binding CantidadConsumos, StringFormat='Consumos: {0}'}"
                                               FontSize="12"
                                               TextColor="{DynamicResource Gray900}" />
                                    </StackLayout>

                                </Grid>

                                <Button Grid.Row="4"
                                        Grid.ColumnSpan="2"
                                        Text="Eliminar de la BD Local"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:RodenticideConsumptionPendingViewModel}}, Path=DeleteCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="{DynamicResource Danger}"
                                        TextColor="White"
                                        CornerRadius="5"
                                        Margin="0,10,0,0"
                                        HeightRequest="40"
                                        FontSize="14" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <Label Text="No hay registros pendientes."
                           Padding="50"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center" />
                </CollectionView.EmptyView>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>
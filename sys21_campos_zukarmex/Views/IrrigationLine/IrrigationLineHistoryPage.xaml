<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:sys21_campos_zukarmex.ViewModels"
             xmlns:models="clr-namespace:sys21_campos_zukarmex.Models"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="sys21_campos_zukarmex.Views.IrrigationLine.IrrigationLineHistoryPage"
             x:DataType="viewmodels:IrrigationLineHistoryViewModel"
             Title="Historial Riego"
             BackgroundColor="{DynamicResource Gray100}">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior EventName="Appearing"
                                        Command="{Binding LoadHistoryDataCommand}" />
    </ContentPage.Behaviors>

    <Grid RowDefinitions="Auto, *">

        <SearchBar Grid.Row="0"
                   Placeholder="Buscar por Campo o Línea de Riego ID"
                   Text="{Binding SearchText}"
                   CancelButtonColor="{DynamicResource Primary}"
                   Margin="10, 5, 10, 0" />

        <RefreshView Grid.Row="1"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">

            <CollectionView ItemsSource="{Binding HistorialEntries}"
                            SelectionMode="None">

                <CollectionView.EmptyView>
                    <StackLayout VerticalOptions="CenterAndExpand"
                                 Padding="30">
                        <Label Text="No se encontraron registros de Línea de Riego en el historial."
                               IsVisible="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"
                               TextColor="{StaticResource Gray500}"
                               FontSize="16" />
                    </StackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:SalidaLineaDeRiego">
                        <Frame BackgroundColor="White"
                               CornerRadius="10"
                               Padding="15"
                               Margin="5"
                               HasShadow="True">
                            <StackLayout Spacing="8">

                                <Grid ColumnDefinitions="*,Auto">
                                    <Label Grid.Column="0"
                                           Text="{Binding IdLineaRiego, StringFormat='Línea Riego #{0}'}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="{DynamicResource Primary}" />
                                    <Label Grid.Column="1"
                                           Text="{Binding Fecha, StringFormat='{0:dd/MM/yyyy HH:mm}'}"
                                           FontSize="14"
                                           TextColor="Gray"
                                           VerticalOptions="Center" />
                                </Grid>

                                <BoxView HeightRequest="1"
                                         Color="LightGray"
                                         Margin="0,5,0,5" />

                                <Grid ColumnDefinitions="*,*">
                                    <StackLayout Grid.Column="0"
                                                 Spacing="2">
                                        <Label Text="INFORMACIÓN"
                                               FontSize="10"
                                               FontAttributes="Bold"
                                               TextColor="{DynamicResource Primary}" />
                                        <Label Text="{Binding IdCampo, StringFormat='Campo ID: {0}'}"
                                               FontSize="12"
                                               TextColor="Black" />
                                        <Label Text="{Binding Id, StringFormat='ID Local: {0}'}"
                                               FontSize="12"
                                               TextColor="Black" />
                                    </StackLayout>

                                    <StackLayout Grid.Column="1"
                                                 Spacing="2">
                                        <Label Text="BOMBEO"
                                               FontSize="10"
                                               FontAttributes="Bold"
                                               TextColor="{DynamicResource Primary}" />
                                        <Label Text="{Binding EquipoBombeo, StringFormat='Equipos Totales: {0}'}"
                                               FontSize="12"
                                               TextColor="Black" />
                                        <Label Text="{Binding EquiposBombeoOperando, StringFormat='Operando: {0}'}"
                                               FontSize="12"
                                               TextColor="Black" />
                                    </StackLayout>
                                </Grid>

                                <Label Text="{Binding Observaciones, StringFormat='Obs.: {0}'}"
                                       FontSize="12"
                                       TextColor="{StaticResource Gray700}"
                                       MaxLines="1"
                                       LineBreakMode="TailTruncation"
                                       Margin="0,5,0,0" />

                            </StackLayout>

                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:IrrigationLineHistoryViewModel}}, Path=ViewEntryDetailsCommand}"
                                                      CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>

                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <ActivityIndicator Grid.RowSpan="2"
                           IsRunning="{Binding IsBusy}"
                           IsVisible="{Binding IsBusy}"
                           Color="{DynamicResource Primary}"
                           VerticalOptions="Center"
                           HorizontalOptions="Center" />
    </Grid>
</ContentPage>
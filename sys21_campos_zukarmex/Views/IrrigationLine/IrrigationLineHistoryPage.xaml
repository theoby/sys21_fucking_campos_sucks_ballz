<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:sys21_campos_zukarmex.ViewModels"
             xmlns:models="clr-namespace:sys21_campos_zukarmex.Models"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="sys21_campos_zukarmex.Views.IrrigationLine.IrrigationLineHistoryPage"
             x:DataType="viewmodels:IrrigationLineHistoryViewModel"
             Title="Historial Riego"
             BackgroundColor="{DynamicResource Gray100}">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior EventName="Appearing"
                                        Command="{Binding LoadHistoryDataCommand}" />
    </ContentPage.Behaviors>

    <Grid RowDefinitions="Auto, *">


        <Frame Grid.Row="0"
               BackgroundColor="White"
               CornerRadius="10"
               Padding="20"
               Margin="10">
            <StackLayout Spacing="15">

                <Label Text="Historial de Riego"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="{DynamicResource Primary}"
                       HorizontalOptions="Center" />

                <Button Text="Actualizar Historial"
                        Command="{Binding RefreshCommand}"
                        BackgroundColor="{DynamicResource Primary}"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="40" />

            </StackLayout>
        </Frame>

        <RefreshView Grid.Row="1"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">

            <CollectionView ItemsSource="{Binding HistorialEntries}"
                            SelectionMode="None">

                <CollectionView.EmptyView>
                    <StackLayout VerticalOptions="CenterAndExpand"
                                 Padding="30">
                        <Label Text="No se encontraron registros de Línea de Riego en el historial."
                               IsVisible="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"
                               TextColor="{StaticResource Gray500}"
                               FontSize="16" />
                    </StackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:SalidaLineaDeRiego">
                        <Frame BackgroundColor="White"
                               CornerRadius="10"
                               Padding="15"
                               Margin="5"
                               HasShadow="True">
                            <Grid ColumnDefinitions="*, Auto"
                                  RowDefinitions="Auto, Auto, Auto, Auto, Auto"
                                  RowSpacing="12">

                                <StackLayout Grid.Row="0"
                                             Grid.ColumnSpan="2">

                                    <Label Text="{Binding Fecha, StringFormat='{0:dd/MM/yyyy HH:mm}'}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="{DynamicResource Gray600}" />

                                    <Grid ColumnDefinitions="*,*"
                                          RowSpacing="5"
                                          Margin="0, 5, 0, 0">

                                        <StackLayout Grid.Column="0"
                                                     Spacing="2">
                                            <Label Text="{Binding CampoNombre, StringFormat='Predio: {0}'}"
                                                   FontSize="12"
                                                   TextColor="{DynamicResource Gray900}" />
                                        </StackLayout>

                                        <StackLayout Grid.Column="1"
                                                     Spacing="2">
                                            <Label Text="{Binding LineaRiegoNombre, StringFormat='Línea de Riego: {0}'}"
                                                   FontSize="12"
                                                   TextColor="{DynamicResource Gray900}" />
                                        </StackLayout>
                                    </Grid>
                                </StackLayout>

                                <BoxView Grid.Row="1"
                                         Grid.ColumnSpan="2"
                                         HeightRequest="1"
                                         Color="LightGray" />

                                <Grid Grid.Row="2"
                                      Grid.ColumnSpan="2"
                                      ColumnDefinitions="*,*"
                                      RowSpacing="5">

                                    <StackLayout Grid.Column="0"
                                                 Spacing="2">
                                        <Label Text="{Binding EquipoBombeo, StringFormat='Equipos Totales: {0}'}"
                                               FontSize="12"
                                               FontAttributes="Bold"
                                               TextColor="{DynamicResource Primary}" />
                                    </StackLayout>

                                    <StackLayout Grid.Column="1"
                                                 Spacing="2">
                                        <Label Text="{Binding EquiposBombeoOperando, StringFormat='Operando: {0}'}"
                                               FontSize="12"
                                               FontAttributes="Bold"
                                               TextColor="{DynamicResource Success}" />
                                    </StackLayout>
                                </Grid>

                                <StackLayout Grid.Row="3"
                                             Grid.ColumnSpan="2"
                                             Margin="0, 5, 0, 0">
                                    <Label Text="Observaciones:"
                                           FontSize="13"
                                           FontAttributes="Bold"
                                           TextColor="{DynamicResource Gray700}" />
                                    <Label Text="{Binding Observaciones}"
                                           FontSize="12"
                                           TextColor="{DynamicResource Gray900}"
                                           MaxLines="4"
                                           LineBreakMode="TailTruncation" />
                                </StackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <ActivityIndicator Grid.RowSpan="2"
                           IsRunning="{Binding IsBusy}"
                           IsVisible="{Binding IsBusy}"
                           Color="{DynamicResource Primary}"
                           VerticalOptions="Center"
                           HorizontalOptions="Center" />
    </Grid>
</ContentPage>
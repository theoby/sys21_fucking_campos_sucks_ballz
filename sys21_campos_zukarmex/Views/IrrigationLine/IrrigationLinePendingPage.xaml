<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="sys21_campos_zukarmex.Views.DamageAssessment.DamageAssessmentPendingPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:sys21_campos_zukarmex.ViewModels"
             xmlns:models="clr-namespace:sys21_campos_zukarmex.Models"
             x:DataType="viewmodels:DamageAssessmentPendingViewModel"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="Muestreos Pendientes"
             BackgroundColor="{DynamicResource Gray100}">

    <ContentPage.ToolbarItems>
    </ContentPage.ToolbarItems>

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior EventName="Appearing"
                                        Command="{Binding LoadPendingAssessmentsAsyncCommand}" />
    </ContentPage.Behaviors>

    <Grid RowDefinitions="Auto,*"
          RowSpacing="10">

        <Frame Grid.Row="0"
               BackgroundColor="White"
               CornerRadius="0"
               Padding="20"
               HasShadow="True">
            <StackLayout Spacing="15">
                <Label Text="Muestreos Pendientes de Envío"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="{DynamicResource Primary}"
                       HorizontalOptions="Center" />

                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="Center"
                             Spacing="20">
                    <Label Text="Total Pendientes:"
                           FontSize="18"
                           TextColor="{DynamicResource Gray700}"
                           VerticalOptions="Center" />
                    <Label Text="{Binding PendingCount}"
                           FontSize="30"
                           FontAttributes="Bold"
                           TextColor="{DynamicResource Orange}"
                           VerticalOptions="Center" />
                </StackLayout>

                <Button Text="Enviar Todos Ahora"
                        Command="{Binding SendAllPendingCommand}"
                        IsVisible="{Binding PendingCount, Converter={StaticResource IsGreaterThanZeroConverter}}"
                        BackgroundColor="{DynamicResource Success}"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="50"
                        FontSize="16" />

            </StackLayout>
        </Frame>

        <RefreshView Grid.Row="1"
                     IsRefreshing="{Binding IsBusy}"
                     Command="{Binding LoadPendingAssessmentsAsyncCommand}">

            <CollectionView ItemsSource="{Binding PendingAssessments}"
                            BackgroundColor="Transparent"
                            Margin="10,0">

                <CollectionView.EmptyView>
                    <StackLayout VerticalOptions="CenterAndExpand"
                                 Padding="30"
                                 HorizontalOptions="Center">
                        <Image Source="success_icon.png"
                               WidthRequest="64"
                               HeightRequest="64"
                               Margin="0,0,0,20" />
                        <Label Text="¡Excelente! No hay muestreos pendientes de sincronizar."
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"
                               TextColor="{DynamicResource Success}"
                               FontSize="18"
                               FontAttributes="Bold" />
                        <Label Text="Todos tus registros están a salvo en la nube."
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"
                               TextColor="{DynamicResource Gray500}"
                               FontSize="14" />
                    </StackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:SalidaMuestroDaños">
                        <Frame BackgroundColor="White"
                               CornerRadius="10"
                               Padding="15"
                               Margin="0,5"
                               HasShadow="True">
                            <Grid ColumnDefinitions="*, Auto"
                                  RowDefinitions="Auto, Auto, Auto">

                                <StackLayout Grid.Row="0"
                                             Grid.Column="0"
                                             Spacing="2">
                                    <Label Text="{Binding Id, StringFormat='Muestreo Local ID: {0}'}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="{DynamicResource Primary}" />
                                    <Label Text="{Binding Fecha, StringFormat='Fecha: {0:dd/MM/yyyy HH:mm}'}"
                                           FontSize="14"
                                           TextColor="{DynamicResource Gray700}" />
                                </StackLayout>

                                <Frame Grid.Row="0"
                                       Grid.Column="1"
                                       BackgroundColor="{DynamicResource Orange}"
                                       CornerRadius="15"
                                       Padding="8"
                                       HasShadow="False"
                                       VerticalOptions="Start"
                                       HorizontalOptions="End">
                                    <Label Text="PENDIENTE"
                                           FontSize="14"
                                           TextColor="White"
                                           FontAttributes="Bold" />
                                </Frame>

                                <StackLayout Grid.Row="1"
                                             Grid.Column="0"
                                             Grid.ColumnSpan="2"
                                             Spacing="2"
                                             Margin="0,10,0,0">
                                    <Label Text="{Binding NumeroTallos, StringFormat='Tallos Contados: {0}'}"
                                           FontSize="12"
                                           TextColor="{DynamicResource Gray600}" />
                                    <Label Text="{Binding DañoViejo, StringFormat='Daño Viejo: {0}'}"
                                           FontSize="12"
                                           TextColor="{DynamicResource Gray600}" />
                                    <Label Text="{Binding DañoNuevo, StringFormat='Daño Nuevo: {0}'}"
                                           FontSize="12"
                                           TextColor="{DynamicResource Gray600}" />
                                    <Label Text="{Binding Lat, StringFormat='Ubicación: {0}, {1}'}"
                                           BindingContext="{Binding .}"
                                           FontSize="12"
                                           TextColor="{DynamicResource Gray600}">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="Ubicación: " />
                                                <Span Text="{Binding Lat, StringFormat='{0:N6}'}" />
                                                <Span Text=", " />
                                                <Span Text="{Binding Lng, StringFormat='{0:N6}'}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </StackLayout>

                                <Button Grid.Row="2"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        Text="Eliminar de la BD Local"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:DamageAssessmentPendingViewModel}}, Path=DeleteAssessmentCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="{DynamicResource Danger}"
                                        TextColor="White"
                                        CornerRadius="5"
                                        Margin="0,10,0,0"
                                        HeightRequest="40"
                                        FontSize="14" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <ActivityIndicator Grid.Row="1"
                           IsRunning="{Binding IsBusy}"
                           IsVisible="{Binding IsBusy}"
                           Color="{DynamicResource Primary}"
                           VerticalOptions="Center"
                           HorizontalOptions="Center" />
    </Grid>
</ContentPage>
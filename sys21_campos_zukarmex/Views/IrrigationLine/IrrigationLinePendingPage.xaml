<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="sys21_campos_zukarmex.Views.IrrigationLine.IrrigationLinePendingPage"
             xmlns:viewmodels="clr-namespace:sys21_campos_zukarmex.ViewModels"
             xmlns:models="clr-namespace:sys21_campos_zukarmex.Models"
             x:DataType="viewmodels:IrrigationLinePendingViewModel"
             Title="Riegos Pendientes">
    <Grid RowDefinitions="Auto,*">
        <Frame Grid.Row="0"
               Padding="20"
               Margin="10"
               CornerRadius="15"
               HasShadow="True">
            <StackLayout Spacing="15">
                <Label Text="Riegos Pendientes de Envío"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="{DynamicResource Primary}"
                       HorizontalOptions="Center" />
                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="Center"
                             Spacing="10">
                    <Label Text="Total Pendientes:"
                           FontSize="18"
                           TextColor="{DynamicResource Gray700}"
                           VerticalOptions="Center" />
                    <Label Text="{Binding PendingCount}"
                           FontSize="30"
                           FontAttributes="Bold"
                           TextColor="{DynamicResource Orange}"
                           VerticalOptions="Center" />
                </StackLayout>
                <Button Text="Enviar Todos Ahora"
                        Command="{Binding SendAllPendingCommand}"
                        BackgroundColor="{DynamicResource Success}"
                        TextColor="White" />
            </StackLayout>
        </Frame>
        <RefreshView Grid.Row="1"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding PendingEntries}"
                            Margin="10,0">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:SalidaLineaDeRiego">
                        <Frame Padding="15"
                               Margin="0,5"
                               CornerRadius="10">
                            <Grid ColumnDefinitions="*, Auto"
                                  RowDefinitions="Auto, Auto, Auto, Auto, Auto"
                                  RowSpacing="12">

                                <StackLayout Grid.Row="0"
                                             Grid.ColumnSpan="2">

                                    <Label Text="{Binding Fecha, StringFormat='{0:dd/MM/yyyy HH:mm}'}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="{DynamicResource Gray600}" />

                                    <Grid ColumnDefinitions="*,*"
                                          RowSpacing="5"
                                          Margin="0, 5, 0, 0">

                                        <StackLayout Grid.Column="0"
                                                     Spacing="2">
                                            <Label Text="{Binding CampoNombre, StringFormat='Predio: {0}'}"
                                                   FontSize="12"
                                                   TextColor="{DynamicResource Gray900}" />
                                        </StackLayout>

                                        <StackLayout Grid.Column="1"
                                                     Spacing="2">
                                            <Label Text="{Binding LineaRiegoNombre, StringFormat='Línea de Riego: {0}'}"
                                                   FontSize="12"
                                                   TextColor="{DynamicResource Gray900}" />
                                        </StackLayout>
                                    </Grid>
                                </StackLayout>

                                <BoxView Grid.Row="1"
                                         Grid.ColumnSpan="2"
                                         HeightRequest="1"
                                         Color="LightGray" />

                                <Grid Grid.Row="2"
                                      Grid.ColumnSpan="2"
                                      ColumnDefinitions="*,*"
                                      RowSpacing="5">

                                    <StackLayout Grid.Column="0"
                                                 Spacing="2">
                                        <Label Text="{Binding EquipoBombeo, StringFormat='Equipos Totales: {0}'}"
                                               FontSize="12"
                                               FontAttributes="Bold"
                                               TextColor="{DynamicResource Primary}" />
                                    </StackLayout>

                                    <StackLayout Grid.Column="1"
                                                 Spacing="2">
                                        <Label Text="{Binding EquiposBombeoOperando, StringFormat='Operando: {0}'}"
                                               FontSize="12"
                                               FontAttributes="Bold"
                                               TextColor="{DynamicResource Success}" />
                                    </StackLayout>
                                </Grid>

                                <StackLayout Grid.Row="3"
                                             Grid.ColumnSpan="2"
                                             Margin="0, 5, 0, 0">
                                    <Label Text="Observaciones:"
                                           FontSize="13"
                                           FontAttributes="Bold"
                                           TextColor="{DynamicResource Gray700}" />
                                    <Label Text="{Binding Observaciones}"
                                           FontSize="12"
                                           TextColor="{DynamicResource Gray900}"
                                           MaxLines="4"
                                           LineBreakMode="TailTruncation" />
                                </StackLayout>


                                <Button Grid.Row="4"
                                        Grid.ColumnSpan="2"
                                        Text="Eliminar de la BD Local"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:IrrigationLinePendingViewModel}}, Path=DeleteCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="{DynamicResource Danger}"
                                        TextColor="White"
                                        CornerRadius="5"
                                        Margin="0,10,0,0"
                                        HeightRequest="40"
                                        FontSize="14" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <Label Text="No hay registros pendientes."
                           Padding="50"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center" />
                </CollectionView.EmptyView>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>